---
import MainLayout from '../layouts/MainLayout.astro'
---

<script>
import gsap from 'gsap'

customElements.define('exp-02', class extends HTMLElement {
  constructor() { super() }

  connectedCallback() {
    const container = this.querySelector('.container') as HTMLElement
    const text = this.querySelector('.text') as HTMLElement

    let tween = gsap.to(container, {
      borderRadius: '2%',
      width: '20vw',
      height: '30vw',
      paused: true
    })

    let tween2 = gsap.to(text, {
      x: 0,
      paused: true
    })

    container.onmouseenter = () => {
      tween.play()
      tween2.play()
    }
    container.onmouseleave = () => {
      tween.reverse()
      tween2.reverse()
    }
  }
})
</script>

<MainLayout>
  <exp-02>
    <div class="container">
      <h1 class="text">nakkvarr</h1>
    </div>
  </exp-02>
</MainLayout>

<style>
  exp-02 {
    width: 100%;
    height: 100vh;
    display: grid;
    place-content: center;
    .container {
      border-radius: 50%;
      background: var(--color-dimmed);
      width: 10vw;
      height: 10vw;
      display: grid;
      place-content: center;
      overflow: hidden;
      .text {
        font-size: clamp(3rem, 3vw, 6rem);
        transform: translateX(30%);
      }
    }
  }
</style>